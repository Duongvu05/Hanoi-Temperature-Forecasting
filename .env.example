# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Visual Crossing Weather API
VISUAL_CROSSING_API_KEY=your_visual_crossing_api_key_here

# ClearML Configuration
CLEARML_API_HOST=your_clearml_host
CLEARML_API_KEY=your_clearml_api_key
CLEARML_SECRET_KEY=your_clearml_secret_key

# MLflow Configuration (optional)
MLFLOW_TRACKING_URI=http://localhost:5000

# Database Configuration (if using database storage)
DATABASE_URL=sqlite:///weather_data.db

# Application Configuration
DEBUG=True
LOG_LEVEL=INFO

# Model Configuration
DEFAULT_FORECAST_DAYS=5
MODEL_RETRAIN_THRESHOLD=3.0
DRIFT_DETECTION_THRESHOLD=0.05